<Window x:Class="Samples.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Samples.Wpf"
        xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="250"
        Name="This"
        d:DataContext="{Binding ElementName=This}">
    <Canvas Background="DarkGray" Height="100" Width="100">
        <Rectangle Canvas.Left="25" Canvas.Top="0" Fill="Black" Width="100" Height="100">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="50"></RotateTransform>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Canvas>
</Window>
