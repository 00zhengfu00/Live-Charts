<Window x:Class="Samples.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:Samples.Wpf"
        xmlns:shapes="clr-namespace:LiveCharts.Wpf.Shapes;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="700"
        Width="950"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></BooleanToVisibilityConverter>
    </Window.Resources>
   <Window.DataContext>
       <wpf:NavigationHandler></wpf:NavigationHandler>
   </Window.DataContext>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Width="20" Height="20" HorizontalAlignment="Left" Margin="8" 
                Visibility="{Binding IsMenuHidden, Converter={StaticResource BooleanToVisibilityConverter}}"
                Command="{Binding ShowMenu}">
            <Image Source="Images/menu.png"></Image>
        </Button>
        <Canvas Grid.Row="1">
            <shapes:Slice Canvas.Left="150" Canvas.Top="150" HorizontalAlignment="Center" VerticalAlignment="Center" 
                          Fill="Blue"
                          Radius="200" 
                          Opacity=".8"
                          InnerRadius="100" 
                          Angle="90"
                          CornerRadius="8"></shapes:Slice>
            <shapes:Slice Canvas.Left="150" Canvas.Top="150" HorizontalAlignment="Center" VerticalAlignment="Center" 
                          Fill="Red"
                          Radius="200" 
                          Opacity=".8"
                          InnerRadius="100" 
                          Angle="90"
                          CornerRadius="8"
                          Rotation="90"></shapes:Slice>
            <shapes:Slice Canvas.Left="150" Canvas.Top="150" HorizontalAlignment="Center" VerticalAlignment="Center" 
                          Fill="Green"
                          Radius="200" 
                          Opacity=".8"
                          InnerRadius="100" 
                          Angle="90"
                          CornerRadius="8"
                          Rotation="180"></shapes:Slice>
            <shapes:Slice Canvas.Left="150" Canvas.Top="150" HorizontalAlignment="Center" VerticalAlignment="Center" 
                          Fill="Red"
                          Radius="200" 
                          Opacity=".8"
                          InnerRadius="100" 
                          Angle="90"
                          CornerRadius="80"
                          Rotation="270"></shapes:Slice>
        </Canvas>
        
        
        <!--<ContentControl Grid.Row="1" Content="{Binding CurrentView}" />-->
    </Grid>
</Window>