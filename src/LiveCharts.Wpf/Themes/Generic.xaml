<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LiveCharts.Wpf"
    xmlns:dataSeries="clr-namespace:LiveCharts.Core.DataSeries;assembly=LiveCharts.Core"
    xmlns:converters="clr-namespace:LiveCharts.Wpf.Converters"
    xmlns:styles="clr-namespace:LiveCharts.Core.Styles;assembly=LiveCharts.Core"
    xmlns:data="clr-namespace:LiveCharts.Core.Data;assembly=LiveCharts.Core">

    <converters:ColorToSolidBrushConverter x:Key="AsSolidColorBrush"/>
    <converters:SvgToGeometryDataConverter x:Key="AsGeometryData"/>
    <converters:GetXFromPointConverter x:Key="GetX"/>
    <converters:GetYFromPointConverter x:Key="GetY"/>

    <Style TargetType="{x:Type local:ChartTooltip}">
        
        <Setter Property="Background" Value="White"></Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ChartTooltip}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3"
                            Padding="8 5"
                            Margin="3">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Direction="270" Color="Black" Opacity=".42" RenderingBias="Performance" />
                        </Border.Effect>
                        <ItemsPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type data:PackedPoint}">
                    <Grid>
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="Auto" SharedSizeGroup="SeriesGeometry" />
                             <ColumnDefinition Width="Auto" SharedSizeGroup="SeriesTitle" />
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Label" />
                        </Grid.ColumnDefinitions>
                        <Path  Grid.Column="0"  
                               Width="{Binding GeometrySize, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ChartTooltip}}}"
                               Height="{Binding GeometrySize, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ChartTooltip}}}"
                               StrokeThickness="{Binding Series.Style.StrokeThickness}"
                               Stroke="{Binding Series.Style.Stroke, Converter={StaticResource AsSolidColorBrush}}"
                               Fill="{Binding Series.Style.Fill, Converter={StaticResource AsSolidColorBrush}}"
                               Stretch="Fill"
                               Data="{Binding Path=Series.Style.(styles:SeriesStyle.Geometry).Data, Converter={StaticResource AsGeometryData}}"
                               Margin="0 0 6 0"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Series.Title}"
                                   VerticalAlignment="Center"
                                   Margin="0 0 6 0"/>
                        <TextBlock Grid.Column="2" Text="{Binding Converter={StaticResource GetY}}" />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="{x:Type local:ChartLegend}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ChartLegend}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="6">
                        <ItemsPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="{Binding ActualOrientation, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ChartLegend}}}"></WrapPanel>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type dataSeries:Series}">
                    <StackPanel Orientation="Horizontal">
                        <Path Width="{Binding GeometrySize, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ChartLegend}}}"
                              Height="{Binding GeometrySize, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ChartLegend}}}"
                              StrokeThickness="{Binding Style.StrokeThickness}"
                              Stroke="{Binding Style.Stroke, Converter={StaticResource AsSolidColorBrush}}"
                              Fill="{Binding Style.Fill, Converter={StaticResource AsSolidColorBrush}}"
                              Stretch="Fill"
                              Data="{Binding Path=Style.(styles:SeriesStyle.Geometry).Data, Converter={StaticResource AsGeometryData}}"
                              Margin="0 0 6 0"/>
                        <TextBlock Text="{Binding Title}" VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
