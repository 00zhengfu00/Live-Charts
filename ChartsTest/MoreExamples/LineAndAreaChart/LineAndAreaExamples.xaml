<Window x:Class="ChartsTest.MoreExamples.LineAndAreaChart.LineAndAreaExamples"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Loaded="LineAndAreaExamples_OnLoaded"
        Title="LineAndAreaExamples" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="2"></Setter>
            <Setter Property="BorderBrush" Value="Gray"></Setter>
            <Setter Property="Padding" Value="10 5"></Setter>
        </Style>
    </Window.Resources>
    <StackPanel>
        <DockPanel HorizontalAlignment="Center" Margin="10">
            <Button Click="Previous" Margin="5">Previous</Button>
            <Button Click="Next" Margin="5">Next</Button>
        </DockPanel>
        <ContentControl Height="300" Name="ContentControl"></ContentControl>
    </StackPanel>
</Window>
