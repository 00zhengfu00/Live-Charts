<UserControl x:Class="ChartsTest.MoreExamples.LineAndAreaChart.Example1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChartsTest.MoreExamples.LineAndAreaChart"
             xmlns:charts="clr-namespace:LiveCharts.Charts;assembly=LiveCharts"
             xmlns:liveCharts="clr-namespace:LiveCharts;assembly=LiveCharts"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Loaded="Example1_OnLoaded">
    <Grid>
        <charts:LineChart Name="Chart">
            <charts:LineChart.PrimaryAxis>
                <liveCharts:Axis Title="Temperature"/>
            </charts:LineChart.PrimaryAxis>
            <charts:LineChart.SecondaryAxis>
                <liveCharts:Axis Title="Date" Enabled="False">
                    <liveCharts:Axis.Separator>
                        <liveCharts:Separator Enabled="False"></liveCharts:Separator>
                    </liveCharts:Axis.Separator>
                </liveCharts:Axis>
            </charts:LineChart.SecondaryAxis>
        </charts:LineChart>
    </Grid>
</UserControl>
