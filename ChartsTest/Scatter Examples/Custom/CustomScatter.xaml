<UserControl x:Class="ChartsTest.Scatter_Examples.CustomScatter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:liveCharts="clr-namespace:lvc;assembly=LiveCharts"
             xmlns:barExamples="clr-namespace:ChartsTest.BarExamples"
             xmlns:customTooltips="clr-namespace:ChartsTest.z.CustomTooltips"
             xmlns:tooltip="clr-namespace:lvc.Tooltip"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600"
             Loaded="OnLoaded">
    <Grid Background="#505050">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="5" Foreground="White">
            Custom Style
        </TextBlock>
        <liveCharts:ScatterChart Name="Chart" Grid.Row="1" Grid.Column="0">
            <liveCharts:ScatterChart.DataToolTip>
                <tooltip:CustomScatterTooltip x:Name="CustomTooltip"/>
            </liveCharts:ScatterChart.DataToolTip>
            <liveCharts:ScatterChart.Series>
                <liveCharts:SeriesCollection>
                    <liveCharts:ScatterSeries Name="Serie1" Title="Tan" Stroke="#FFB300" Fill="#AAFFB300" PointRadius="0" StrokeThickness="4"></liveCharts:ScatterSeries>
                    <liveCharts:ScatterSeries Name="Serie2" Title="ATan" Stroke="#FFA000" Fill="#AAFFA000" PointRadius="0" StrokeThickness="4"></liveCharts:ScatterSeries>
                </liveCharts:SeriesCollection>
            </liveCharts:ScatterChart.Series>
            <liveCharts:ScatterChart.AxisX>
                <liveCharts:Axis IsEnabled="False" Foreground="White" FontSize="13" FontFamily="Arial">
                    <liveCharts:Axis.Separator>
                        <liveCharts:Separator Color="#404040" Thickness="2" IsEnabled="True"></liveCharts:Separator>
                    </liveCharts:Axis.Separator>
                </liveCharts:Axis>
            </liveCharts:ScatterChart.AxisX>
            <liveCharts:ScatterChart.AxisY>
                <liveCharts:Axis IsEnabled="False" MinValue="0" MaxValue="1">
                    <liveCharts:Axis.Separator>
                        <liveCharts:Separator IsEnabled="False"></liveCharts:Separator>
                    </liveCharts:Axis.Separator>
                </liveCharts:Axis>
            </liveCharts:ScatterChart.AxisY>
        </liveCharts:ScatterChart>
        <liveCharts:SeriesViewer Grid.Row="2"
                                 Series="{Binding ElementName=Chart, Path=Series}"
                                 HorizontalAlignment="Center"
                                 Orientation="Horizontal"
                                 Foreground="White"
                                 Margin="5">
        </liveCharts:SeriesViewer>
    </Grid>
</UserControl>
