<UserControl x:Class="ChartsTest.Line_Examples.RotadedLine.RotatedLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts;assembly=LiveCharts"
             xmlns:rotadedLine="clr-namespace:ChartsTest.Line_Examples.RotadedLine"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance rotadedLine:RotatedLine}"
             Loaded="OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">
            <Bold>Rotated Line</Bold>: this example shows a rotated line chart, it is really easy with live charts.
        </TextBlock>
        <lvc:LineChart Name="Chart" Grid.Row="1" Invert="True" Series="{Binding SeriesCollection}" ZoomingAxis="Y">
            <lvc:LineChart.AxisY >
                <lvc:Axis Labels="Day 1, Day 2, Day 3, day 4, day5, day6"></lvc:Axis>
            </lvc:LineChart.AxisY>
        </lvc:LineChart>
    </Grid>
</UserControl>
