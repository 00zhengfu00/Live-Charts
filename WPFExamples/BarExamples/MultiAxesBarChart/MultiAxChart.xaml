<UserControl x:Class="ChartsTest.BarExamples.MultiAxesBarChart.MultiAxChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChartsTest.BarExamples.MultiAxesBarChart"
             xmlns:lvc="clr-namespace:LiveCharts;assembly=LiveCharts"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <lvc:BarChart>
            <lvc:BarChart.Series>
                <lvc:BarSeries Values="5, 8 ,7" />
                <lvc:BarSeries Values="3, 2, 7"/>
                <lvc:LineSeries Values=".3, .8, 1" Fill="Transparent" ScalesYAt="1"/>
            </lvc:BarChart.Series>
            <lvc:BarChart.AxisY>
                <lvc:Axis MinValue="0"/>
                <lvc:Axis />
            </lvc:BarChart.AxisY>
        </lvc:BarChart>
    </Grid>
</UserControl>
