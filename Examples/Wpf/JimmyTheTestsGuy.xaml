<UserControl x:Class="Wpf.JimmyTheTestsGuy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="500"
             d:DesignWidth="800"
              d:DataContext="{d:DesignInstance local:JimmyTheTestsGuy}">
    <Canvas Name="Container">
        
        <!-- 
        the tooltip requires a canvas to move properly, 
        so lets wrap our view where you need a shared tooltip 
        with a Canvas container
        -->

        <lvc:DefaultTooltip Name="Tooltip" Visibility="Hidden" 
                            Panel.ZIndex="100"
                            Canvas.Left="0" Canvas.Top="0"> <!--it also needs an initial position-->
        </lvc:DefaultTooltip>

        <Grid Height="{Binding ActualHeight, ElementName=Container}" 
              Width="{Binding ActualWidth, ElementName=Container}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <lvc:CartesianChart Grid.Column="0" Panel.ZIndex="3" Background="White"
                            DataTooltip="{Binding ElementName=Tooltip}">
                <lvc:CartesianChart.Series>
                    <lvc:LineSeries Values="1,2,3,4,5" LabelPoint="{Binding Func}"></lvc:LineSeries>
                </lvc:CartesianChart.Series>
            </lvc:CartesianChart>
            <lvc:CartesianChart Grid.Column="1" Panel.ZIndex="2" Background="White"
                            DataTooltip="{Binding ElementName=Tooltip}">
                <lvc:CartesianChart.Series>
                    <lvc:LineSeries Values="1,2,3,4,5" LabelPoint="{Binding Func}"></lvc:LineSeries>
                </lvc:CartesianChart.Series>
            </lvc:CartesianChart>
            <lvc:CartesianChart Grid.Column="2" Panel.ZIndex="1" Background="White"
                            DataTooltip="{Binding ElementName=Tooltip}">
                <lvc:CartesianChart.Series>
                    <lvc:LineSeries Values="1,2,3,4,5" LabelPoint="{Binding Func}" ></lvc:LineSeries>
                </lvc:CartesianChart.Series>
            </lvc:CartesianChart>
        </Grid>
    </Canvas>
</UserControl>
