<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:lc="clr-namespace:LiveChartsDesktop;assembly=Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="525"
        d:DataContext="{d:DesignInstance local:MainWindow}">
    <Grid>
        <lc:CartesianChart Margin="10" Series="{Binding SeriesCollection}" DataClick="Chart_OnDataClick" >
            <lc:CartesianChart.AxisY>
                <lc:Axis Title="Hello World"/>
            </lc:CartesianChart.AxisY>
            <lc:CartesianChart.AxisX>
                <lc:Axis Title="X Axis Title"/>
            </lc:CartesianChart.AxisX>
        </lc:CartesianChart>
    </Grid>
</Window>
